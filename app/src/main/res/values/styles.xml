<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_edittext_background</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#96B6A2</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextAppearance.BottomNav.Active" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorActive</item>
    </style>

    <style name="TextAppearance.BottomNav.Inactive" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorInactive</item>
    </style>
</resources>