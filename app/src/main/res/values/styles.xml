<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_edittext_background</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#96B6A2</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextAppearance.BottomNav.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorActive</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.BottomNav.Inactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorInactive</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/lightgreen</item>
        <item name="motionEasingEmphasized">@android:anim/accelerate_decelerate_interpolator</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="DayButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/button_day_text_selector</item>
        <item name="strokeColor">@color/button_day_stroke_selector</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/button_day_background_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/darkgreen</item>
        <item name="colorOnPrimary">@color/purewhite</item>
        <item name="colorSurface">@color/purewhite</item>
        <item name="background">@color/darkgreen</item>
        <item name="backgroundColor">@color/lightgreen</item>
        <item name="clockHandColor">@color/darkgreen</item>
    </style>

    <style name="CustomNumberPicker">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/darkgreen</item>
        <item name="android:colorControlNormal">@color/material_dynamic_neutral20</item>
    </style>

    <style name="CalendarWeekDayText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/darkgreen</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>
</resources>