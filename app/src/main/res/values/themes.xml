<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Tutortoise" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/darkgreen</item>

        <!-- Make status bar white -->
        <item name="android:statusBarColor">@color/white</item>

        <!-- Make status bar icons dark -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Enable AppCompat support -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tutortoise" parent="Base.Theme.Tutortoise" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purewhite</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Tutortoise</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>
</resources>