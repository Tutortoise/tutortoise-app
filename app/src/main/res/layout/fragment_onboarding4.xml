<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Top Bar (App Name) -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutortoise"
        android:textSize="25sp"
        android:paddingTop="15dp"
        android:textColor="@color/darkgreen"
        android:fontFamily="@font/montserrat_extra_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content Area (Illustration, Header, and Description) -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintBottom_toTopOf="@id/footerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">

        <!-- Onboarding Illustration -->
        <ImageView
            android:id="@+id/onboardingIllust4"
            android:layout_width="250dp"
            android:layout_height="350dp"
            android:src="@drawable/ilustrasi4" />

        <!-- Welcome Text Header -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboardingHeader4"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Description Text -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center"
            android:text="@string/onboardingText4"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Footer (Page Indicator and Continue Button) -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Page Indicator -->
        <LinearLayout
            android:id="@+id/pageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <!-- Inactive Indicators -->
            <ImageView
                android:id="@+id/indicator1"
                android:layout_width="@dimen/indicator_width_inactive"
                android:layout_height="@dimen/indicator_height"
                android:src="@drawable/ic_indicator_inactive"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/indicator2"
                android:layout_width="@dimen/indicator_width_inactive"
                android:layout_height="@dimen/indicator_height"
                android:src="@drawable/ic_indicator_inactive"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/indicator3"
                android:layout_width="@dimen/indicator_width_inactive"
                android:layout_height="@dimen/indicator_height"
                android:src="@drawable/ic_indicator_inactive"
                android:layout_marginEnd="8dp" />

            <!-- Active Indicator -->
            <ImageView
                android:id="@+id/indicator4"
                android:layout_width="@dimen/indicator_width_active"
                android:layout_height="@dimen/indicator_height"
                android:src="@drawable/ic_indicator_active"/>
        </LinearLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conti"
            android:backgroundTint="@color/darkgreen"
            android:textColor="@android:color/white"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="32dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
